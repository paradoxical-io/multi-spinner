{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "lib",
    "rootDir": "src",
    "module": "commonjs",
    "lib": ["es2016", "es2017", "es2018"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/"],
  "exclude": ["./example/"]
}
